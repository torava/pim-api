{
  "compilerOptions": {
    "outDir": "dist/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "lib": ["es2020"],
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/static"]
}
