{
  "openapi": "3.0.0",
  "info": {
    "title": "Product Attribute API",
    "version": "1.1.3"
  },
  "host": "localhost:42808",
  "paths": {
    "/api/recommendation": {
      "get": {
        "description": "Returns a list of recommendations",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Recommendation"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/attribute": {
      "get": {
        "description": "Returns a list of attributes",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Attribute"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/item": {
      "get": {
        "description": "Returns a list of items",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Item"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/category/{id}": {
      "get": {
        "description": "Returns category by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Category id to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Category"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/category": {
      "get": {
        "parameters": [
          {
            "name": "pageNumber",
            "in": "query",
            "type": "integer",
            "description": "Zero based page number"
          },
          {
            "name": "categoriesPerPage",
            "in": "query",
            "type": "integer",
            "description": "Number of categories per page"
          },
          {
            "name": "name",
            "in": "query",
            "type": "string",
            "description": "Part of category name for filtering"
          }
        ],
        "description": "Returns a list of categories",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Category"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/category/diary": {
      "post": {
        "description": "Returns Fineli diary file with prices and environmental foodprints colored based on recommendations from uploaded diary file",
        "parameters": [
          {
            "name": "locale",
            "in": "query",
            "type": "string",
            "description": "Locale"
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "upload": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/product/{id}": {
      "get": {
        "description": "Returns product by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Product id to return"
          },
          {
            "name": "attributeCodes",
            "in": "query",
            "type": "string",
            "description": "Attribute codes to aggregate for product"
          },
          {
            "name": "foodUnitAttributeCode",
            "in": "query",
            "type": "string",
            "description": "Attribute code for food unit to use in attribute aggregation"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/product": {
      "get": {
        "parameters": [
          {
            "name": "Accept-Language",
            "in": "header",
            "type": "string",
            "description": "Accept language header for filtering name translations"
          },
          {
            "name": "pageNumber",
            "in": "query",
            "type": "integer",
            "description": "Zero based page number"
          },
          {
            "name": "productsPerPage",
            "in": "query",
            "type": "integer",
            "description": "Number of products per page"
          },
          {
            "name": "name",
            "in": "query",
            "type": "string",
            "description": "Part of product name for filtering"
          },
          {
            "name": "contributionList",
            "in": "query",
            "type": "string",
            "description": "Product contributions separated with commas"
          },
          {
            "name": "brand",
            "in": "query",
            "type": "string",
            "description": "Product brand"
          },
          {
            "name": "category",
            "in": "query",
            "type": "string",
            "description": "Product category"
          },
          {
            "name": "quantity",
            "in": "query",
            "type": "number",
            "description": "Product quantity"
          },
          {
            "name": "measure",
            "in": "query",
            "type": "number",
            "description": "Product measure such as weight or volume"
          },
          {
            "name": "unit",
            "in": "query",
            "type": "string",
            "description": "Unit of product measure such as kg or l"
          },
          {
            "name": "attributeCodes",
            "in": "query",
            "type": "string",
            "description": "Attribute codes separated with commas to aggregate for product.\n\nFor example, GHG will return carbon footprint.\n\nENERC,FAT,FASAT,CHOAVL,SUGAR,FIBRC,PROT,NACL returns basic nutritional information."
          },
          {
            "name": "foodUnitAttributeCode",
            "in": "query",
            "type": "string",
            "description": "Attribute code for food unit to use in attribute aggregation.\n\nFor example, PORTS is small portion, PORTM is medium portion and PORTL is large portion."
          }
        ],
        "description": "Returns list of products",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "description": "Creates a new product",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/source": {
      "get": {
        "description": "Returns list of sources",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Source"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/transaction/csv": {
      "post": {
        "description": "Creates new products from CSV file",
        "consumes": "multipart/form-data",
        "parameters": [
          {
            "name": "template",
            "in": "query",
            "type": "string",
            "description": "CSV template (sryhma, kesko, default)"
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "transactions": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Products added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/transaction": {
      "post": {
        "description": "Creates a new transaction",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transaction added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/receipt": {
      "post": {
        "description": "Creates a receipt",
        "responses": {
          "201": {
            "description": "Receipt created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Receipt"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/receipt/recognize": {
      "post": {
        "description": "Recognizes a receipt from image file",
        "consumes": "multipart/form-data",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "receipt": {
                    "type": "string",
                    "format": "binary"
                  },
                  "id": {
                    "type": "number"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Receipt recognized",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Source": {
        "type": "object",
        "required": "name",
        "properties": {
          "name": {
            "type": "string"
          },
          "authors": {
            "type": "string"
          },
          "publicationUrl": {
            "type": "string"
          },
          "publicationDate": {
            "type": "string"
          },
          "countryCode": {
            "type": "string"
          }
        }
      },
      "Product": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string",
            "description": "Product name"
          },
          "contributionList": {
            "type": "string",
            "description": "Product contributions separated with comma"
          },
          "measure": {
            "type": "number",
            "description": "Product amount measure"
          },
          "unit": {
            "type": "string",
            "description": "Product amount unit"
          },
          "attributes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductAttribute"
            },
            "description": "List of product attributes"
          },
          "contributions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductContribution"
            }
          }
        }
      },
      "ProductContribution": {
        "type": "object",
        "required": ["id", "amount", "unit"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "amount": {
            "type": "number"
          },
          "unit": {
            "type": "string"
          },
          "category": {
            "$ref": "#/components/schemas/Category"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "contribution": {
            "$ref": "#/components/schemas/Category"
          }
        }
      },
      "Attribute": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "object"
          },
          "parent": {
            "$ref": "#/components/schemas/Attribute"
          }
        }
      },
      "ProductAttribute": {
        "type": "object",
        "required": ["id", "name", "value"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "value": {
            "type": "number"
          },
          "type": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "attribute": {
            "$ref": "#/components/schemas/Attribute"
          }
        }
      },
      "Category": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "object"
          }
        }
      },
      "CategoryAttribute": {
        "type": "object",
        "required": ["id", "value", "unit", "type"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "value": {
            "type": "float"
          },
          "unit": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "category": {
            "$ref": "#/components/schemas/Category"
          },
          "attribute": {
            "$ref": "#/components/schemas/Attribute"
          },
          "sources": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CategoryAttributeSource"
            }
          }
        }
      },
      "CategoryAttributeSource": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "reference_url": {
            "type": "string"
          },
          "reference_date": {
            "type": "string"
          },
          "note": {
            "type": "string"
          },
          "countryCode": {
            "type": "string"
          },
          "attribute": {
            "$ref": "#/components/schemas/Attribute"
          },
          "source": {
            "$ref": "#/components/schemas/Source"
          }
        }
      },
      "Party": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "vat": {
            "type": "string"
          },
          "streetName": {
            "type": "string"
          },
          "streetNumber": {
            "type": "string"
          },
          "postalCode": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "transaction": {
            "$ref": "#/components/schemas/Transaction"
          }
        }
      },
      "Group": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "transactions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Transaction"
            }
          }
        }
      },
      "Receipt": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "file": {
            "type": "string"
          },
          "locale": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        }
      },
      "Item": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "itemNumber": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "currency": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "measure": {
            "type": "number"
          },
          "unit": {
            "type": "string"
          },
          "transaction": {
            "$ref": "#/components/schemas/Transaction"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "totalPrice": {
            "type": "number"
          },
          "totalPriceRead": {
            "type": "number"
          },
          "date": {
            "type": "string"
          },
          "party": {
            "$ref": "#/components/schemas/Party"
          },
          "group": {
            "$ref": "#/components/schemas/Group"
          },
          "receipts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Receipt"
            }
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Item"
            }
          }
        }
      },
      "Recommendation": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "value": {
            "type": "integer"
          },
          "unit": {
            "type": "string"
          },
          "perUnit": {
            "type": "string"
          },
          "minimumAge": {
            "type": "number"
          },
          "maximumAge": {
            "type": "number"
          },
          "sex": {
            "type": "string"
          },
          "weight": {
            "type": "number"
          },
          "pav": {
            "type": "boolean"
          },
          "pal": {
            "type": "number"
          },
          "note": {
            "type": "string"
          }
        }
      }
    }
  }
}
